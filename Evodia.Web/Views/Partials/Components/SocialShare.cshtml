@using Umbraco.Web
@inherits UmbracoViewPage<IPublishedContent>
@{
	@*
		maybe look at this for new links: http://sharingbuttons.io/
	*@

	var homePage = Model.Site();
	var settings = homePage.Descendants("globalSettings").First();
	var siteUrl = Request.Url.Host.ToString();
	var pageUrl = Request.Url.ToString();
	pageUrl = pageUrl.Replace("/", "%2F");
	var pageName = (Model.HasValue("jobTitle") ? Model.GetPropertyValue<string>("jobTitle") : Model.Name);
	var pageImage = siteUrl + Umbraco.TypedMedia( settings.GetPropertyValue<string>("defaultSocialMediaImage") ).Url;
	var pageMeta = (Model.HasValue("description") ? Model.GetPropertyValue("description") : "");

	string twitterUrl = settings.GetPropertyValue<string>("twitter");
	var twitterCreator = settings.HasValue("twitter") ? twitterUrl.Split('/').Last() : "EMPTY";

	var facebookShareUrl = "https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2F" + @pageUrl + "&t=" + @pageName;
	var twitterShareUrl = "https://twitter.com/intent/tweet?source=http%3A%2F%2F" + @pageUrl + "&text=" + @pageName + ":%20http%3A%2F%2F" + @pageUrl + "&via=" + @twitterCreator;
	var googleShareUrl = "https://plus.google.com/share?url=http%3A%2F%2F" + @pageUrl;
	var linkedInShareUrl = "http://www.linkedin.com/shareArticle?mini=true&url=http%3A%2F%2F" + @pageUrl + "&title=" + @pageName + "&summary=" + @pageMeta + "&source=http%3A%2F%2F" + @pageUrl;
}

<ul class="o-share">
	<li class="o-share__item"><a href="@facebookShareUrl" target="_blank" title="Share on Facebook" class="o-share__link o-share__link--facebook"><i class="ico-facebook"></i><span class="t-hide-text">Facebook</span></a></li>
	<li class="o-share__item"><a href="@twitterShareUrl" target="_blank" title="Share on Twitter" class="o-share__link o-share__link--twitter"><i class="ico-twitter"></i><span class="t-hide-text">Twitter</span></a></li>
	<li class="o-share__item"><a href="@googleShareUrl" target="_blank" title="Share on Google Plus" class="o-share__link o-share__link--google"><i class="ico-google"></i><span class="t-hide-text">Google Plus</span></a></li>
	<li class="o-share__item"><a href="@linkedInShareUrl" target="_blank" title="Share on LinkedIn" class="o-share__link o-share__link--linkedin"><i class="ico-linkedin"></i><span class="t-hide-text">LinkedIn</span></a></li>
</ul>
